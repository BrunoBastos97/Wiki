<%- include('./partials/header.ejs') %>
<%- include('./partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Wiki Bytecom Sistemas</h1>
            <p class="lead">Esta é o Byte Guia, uma wiki dos sistemas Bytecom.</p>
            <hr class="my-4">
            <p>Nessa wiki voce pode estar encontrando guia de treinamento, perguntas frenquentes sobre os sistemas, dúvidas de usabilidade dos sistemas e muito mais</p>
          </div>
        <hr>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
                <br>
            </div>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a style="float: right" href="/articles/page/2">Next >>></a>
            </div>
            <hr>
        </div>
        <hr>
    </div>
</body>
<%- include('./partials/footer.ejs') %>